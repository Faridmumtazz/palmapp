<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_5"
    tools:context=".view.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:text="Match Your Palm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_search"
                android:paddingStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="15dp"
                style="@style/EditTextStyle"
                android:hint="@string/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="330dp"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_baseline_search_24" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_perkebunan"
                android:text="@string/perkebunan"
                style="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:padding="2dp" />
            <Button
                android:id="@+id/btn_jasa"
                android:text="@string/jasa"
                style="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:padding="2dp" />
            <Button
                android:id="@+id/btn_company"
                android:text="@string/company"
                style="@style/EditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:padding="2dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_popular"
            android:layout_alignParentBottom="true"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="4">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>








</androidx.coordinatorlayout.widget.CoordinatorLayout>